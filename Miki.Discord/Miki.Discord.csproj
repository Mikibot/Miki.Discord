<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Miki.Discord</AssemblyName>
    <RootNamespace>Miki.Discord</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.2.0</Version>
    <Authors>Velddev</Authors>
    <Company>Velddev</Company>
    <Description>Miki Discord Client</Description>
    <PackageTags>discord, api</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
    <None Remove="LICENSE" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Miki.Cache" Version="0.3.0" />
    <PackageReference Include="Miki.Discord.Common" Version="1.1.0" />
    <PackageReference Include="Miki.Discord.Messaging" Version="1.1.0" />
    <PackageReference Include="Miki.Discord.Rest" Version="2.0.3" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Miki.Discord.Common\Miki.Discord.Common.csproj" />
    <ProjectReference Include="..\Miki.Discord.Gateway.Distributed\Miki.Discord.Gateway.Distributed.csproj" />
    <ProjectReference Include="..\Miki.Discord.Rest\Miki.Discord.Rest.csproj" />
  </ItemGroup>

</Project>
