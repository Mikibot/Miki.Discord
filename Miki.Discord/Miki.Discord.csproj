<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Miki.Discord</AssemblyName>
    <RootNamespace>Miki.Discord</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.1.0</Version>
    <Authors>velddev</Authors>
    <Company />
    <Description>Miki Rest-only Discord client</Description>
    <PackageTags>discord, api</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
    <None Remove="LICENSE" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="StackExchange.Redis.Extensions.Protobuf" Version="3.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Miki.Discord.Common\Miki.Discord.Common.csproj" />
    <ProjectReference Include="..\Miki.Rest\Miki.Rest\Miki.Rest.csproj" />
    <ProjectReference Include="..\miki\Miki.Discord.Rest\Miki.Discord.Rest.csproj" />
    <ProjectReference Include="..\miki\Miki.Messaging\Miki.Discord.Messaging.csproj" />
  </ItemGroup>

</Project>
